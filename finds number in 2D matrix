       if ( mat[mid][0] <=  tar &&  tar <=mat[mid][3]  )
       
       {
          cout <<mid; 
          break;
        }
         if ( tar < mat[mid][0])
         {
            st = mid -1; 
         }
         if ( tar  >  mat[mid][3])
         {
            st = mid  + 1; 
         }
         else {
            cout << " not vlaid ";
            break;
         }

   }
    int row = mat[mid][0]; 
    int row2 = mat[mid ][3];
    st = 0; 
    end =3; 
     int mid1 =-1;
    while ( st <= end)
    {
   
      mid1= st + ( end -st)/2;
      {
         if ( tar == mat[mid][mid1] )
         {
            cout << mid1;
            break;
         }
         if ( tar < mat[mid][mid1] )
         {
            end = mid1 -1; 
         }
