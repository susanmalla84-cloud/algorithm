// Online C++ compiler to run C++ program online
// brute force approach 
#include <iostream>
#include<algorithm>
using namespace std;

int main() {
    // Write C++ code here
int maxi=0;
int area;
int arr[6]={2,3,4,6,3,2};
for ( int i = 0 ;  i< 6;i ++)
{
    for ( int j = i +1; j< 6;j++)
    {
     int width = j - i;
     int height= min(arr[i],arr[j]);
     area = height * width;
     maxi= max(area,maxi);
    }
}

cout <<" the maximum amount of water that will be store  is" <<"  " <<maxi<<" "<< "litres";
    return 0;
}
